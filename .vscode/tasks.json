{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "${workspaceFolder}/src/main/java/main/App.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin",
                "main.App"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
